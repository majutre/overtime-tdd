<h1>Posts</h1>

<table class="table table-striped table-hover">
	<thead>
		<tr>
			<th>Overtime Requested</th>
			<th>Date</th>
			<th class="hidden-xs">Rationale</th>
			<th>Status</th>
			<th colspan=2 style="text-align: center;">Actions</th>
		</tr>
	</thead>
	<tbody>
		<%= render @posts %>
	</tbody>
</table>

<%= paginate @posts %>