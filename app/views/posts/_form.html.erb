<%= form_for @post, class: "form-horizontal" do |f| %>

  <% if @post.errors.any? %>
    <ul class="alert alert-danger align-items-center" role="alert">
      <% @post.errors.messages.each do |attr, msg| %>
        <li> <%= "#{attr.capitalize} #{msg.to_sentence}" %> </li>
      <% end %>
    </ul>
  <% end %>
            
  <div class="form-group">
  	<%= f.label :overtime_request %>	
  	<%= f.text_field :overtime_request, class: "form-control" %>	
  </div>

  <div class="form-group mt-4">
  	<%= f.label :date %>	
  	<%= f.date_field :date, class: "form-control" %>	
  </div>

  <div class="form-group">
  	<%= f.label :rationale %>	
  	<%= f.text_area :rationale, class: "form-control" %>	
  </div>


  <%= render partial: 'status', locals: { f: f } if admin_types.include?(current_user.try!(:type)) %>

  <%= f.submit 'Save', class: 'btn btn-primary btn-block custom-btn' %>
<% end %>