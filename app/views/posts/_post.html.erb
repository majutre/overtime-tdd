<tr>
  <td>
    <%= post.overtime_request %>
  </td>
  <td>
    <%= post.date %>
  </td>
  <td class="hidden-xs">
    <%= link_to truncate(post.rationale), post %>
  </td>
  <td>
      <%= status_badge post.status %>
  </td>
  <td>
    <%= link_to icon('fa-solid', 'pen'), edit_post_path(post), id: "edit_post_#{post.id}", class: "index-icons" if policy(post).update? %>
  </td>
  <td>
    <%= link_to icon('fa-solid', 'trash-can'), post_path(post), 
        method: :delete, 
        id: "delete_post_#{post.id}_from_index",
        class: "index-icons",
        data: { confirm: 'Are you sure?'} %>
  </td>
</tr>
